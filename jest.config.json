{
  "roots": [
    "<rootDir>/test"
  ],
  "testMatch": [
    "**/*.test.ts"
  ],
  "testEnvironment": "node",
  "preset": "ts-jest/presets/default-esm",
  "extensionsToTreatAsEsm": [
    ".ts"
  ],
  "globals": {
    "ts-jest": {
      "useESM": true
    }
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(string-width|strip-ansi|ansi-regex)/)"
  ],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  }
}